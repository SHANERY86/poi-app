{{> mainmenu subtitle="Add a new place"}}
<div class="uk-card-default uk-margin uk-card-body" >
    <form class="uk-form-horizontal" action="/addplace" method="POST" enctype="multipart/form-data">
        <div class="uk-width-1-3@m"><label class="uk-form-label">Enter Location Name</label>
            <input class="uk-input"  type="text" name="name" placeholder="Name"> </div> 
            <div class="uk-margin-top">
                <label class="uk-form-label">Enter Location Description</label> 
                <textarea class="uk-textarea" rows="5" type="text" name="description" placeholder="Description"></textarea>
            </div>
             <div class="uk-margin uk-width-1-3@m">
      <label class="uk-form-label" for="form-horizontal-text">Select Image</label>
        <input type="file" class="uk-input" name="imagefile" accept="image/png, image/jpeg">
    </div>   
                <input type="submit" value="Upload" class= "uk-button uk-button-primary uk-button-default">
    </form>
</div> 
{{> error }} 

 
