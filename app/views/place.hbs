{{> mainmenu subtitle="Place details"}}
<div class="uk-card uk-margin">
    <img src="{{place.image}}" width="400"> <br>
    <div class="uk-card uk-card-default uk-card-body uk-margin">
        <h3>{{place.name}}</h3> 
        <p>{{place.description}}</p>
    </div>
<div class="uk-flex">
        <div class="uk-width-1-4 uk-card uk-card-default uk-card-body uk-margin">
            <h3>Rating</h3>
            <p>{{place.rating}}/5</p>
            <p>No. of Ratings: {{place.numberOfRatings}}</p>
            <form action="/rating/{{place._id}}" method="POST">
                <label class="uk-form-label">Enter rating</label>
                <input class="uk-input uk-width-1-3"  type="number" name="rating" min="0" max="5">
                <button class="uk-button uk-button-primary">OK</button> 
            </form>
        </div>
        <div class="uk-width-3-4 uk-card uk-card-default uk-card-body uk-margin-left">
            <h3>Reviews</h3>
        </div>
</div>
<div class="uk-card uk-card-default uk-card-body uk-margin">
    <h3>Comments</h3>
</div>
</div>