{{> mainmenu subtitle="Edit place entry"}}
<div class="uk-card-default uk-margin uk-card-body" >
    <form class="uk-form-horizontal" action="/editplace/{{place._id}}" method="POST" enctype="multipart/form-data">
        <div class="uk-width-1-3@m"><label>Enter Location Name</label>
            <textarea class="uk-input"  type="text" name="name">{{place.name}} </textarea> 
        </div> 
        <div class="uk-margin">
            <label>Enter Location Description</label> 
            <textarea class="uk-textarea" rows="5" type="text" name="description">{{place.description}}</textarea>
        </div>
        <div class="uk-margin">
            <label>Enter Category (create categories from "view by category menu")</label>
            <select class="uk-select" type="text" name="category">
                <option >{{place.category}}</option>
                <option>None</option>
                <option>City</option>
                <option>Town</option>
                <option>Landmark - Man made</option>
                <option>Landmark - Natural</option>
                <option>Mountain</option>
                <option>Hill</option>                        
                <option>Beach</option>
                <option>Lake</option>
                <option>River</option>
                <option>Island</option>
                <option>Establishment</option> 
                <option>Other</option>                                         
            </select>                                                  
        </div>
            <div class="uk-flex">
                <div class="uk-margin uk-width-1-3">
                    <div class="uk-margin">
                        <label>Enter GPS Co-ordinates</label>  
                        <textarea class="uk-input" id="lat"  type="text" name="latitude" placeholder="Latitude">{{place.lat}}</textarea>
                        <textarea class="uk-input" id="lng" type="text" name="longitude" placeholder="Longitude">{{place.long}}</textarea>  
                    </div>        
                      
                    <label for="form-horizontal-text">Change Image</label>
                    <input type="file" class="uk-input" name="imagefile" accept="image/png, image/jpeg">
                </div>
        
                <div class="uk-width-expand">
                    <div id="map" class="uk-card uk-margin">
                            <div class="uk-flex">
                            <div class="uk-card uk-card-body uk-padding-small uk-width-auto">
                                Set pin and click OK for co-ordinates
                            </div>
                                    <div class="uk-card uk-margin">
                                        <button type="button" onclick="getGPS();" class="uk-button uk-button-default uk-button-small">OK</button>
                                    </div>                        
                            </div>
                        <iframe id="iframe"  src="/addgpsmap" width="650", height="350"></iframe>
                    </div>
                </div> 
            </div> 
            <div class="uk-margin-medium-top">   
                <input type="submit" value="Update" class= "uk-button uk-button-primary uk-button-default uk-margin">
            </div>  
    </form>
