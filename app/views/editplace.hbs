{{> mainmenu subtitle="Edit place entry"}}
<div class="uk-card-default uk-margin uk-card-body" >
    <form class="uk-form-horizontal" action="/editplace/{{place._id}}" method="POST">
        <div class="uk-width-1-3@m"><label class="uk-form-label">Enter Location Name</label>
            <textarea class="uk-input"  type="text" name="name">{{place.name}} </textarea> 
        </div> 
        <div class="uk-margin">
            <label class="uk-form-label">Enter Location Description</label> 
            <textarea class="uk-textarea" rows="5" type="text" name="description">{{place.description}}</textarea>
        </div>
        <div>   
        <input type="submit" value="Upload" class= "uk-button uk-button-primary uk-button-default">
        </div> 
    </form>
</div> 
{{> error }} 