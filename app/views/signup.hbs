{{> startmenu}}
<div class="uk-margin"></div>
    <div class="uk-child-width-expand" uk-grid>
        <div class="uk-width-1-2">
            <div class="uk-card-default uk-card-body">
                <form action="/adduser" method="POST">
                    <h2>CREATE ACCOUNT</h2>
                    <label class="uk-form-label">Username</label>
                    <input class="uk-input"  type="text" name="name" placeholder="Username">  
                    <div class="uk-margin-top">
                        <label class="uk-form-label">E-mail Address</label> 
                        <input class="uk-input"  type="text" name="email" placeholder="email">  
                    </div>
                    <div class="uk-margin-top">
                        <label class="uk-form-label">Password</label> 
                        <input class="uk-input" type="password" name="password" placeholder="password">  
                    </div>                    
                        <button class="uk-button uk-button-primary uk-margin-medium-top">CREATE ACCOUNT</button>
                </form>
            </div>
            {{> error }}
        </div>
        <div class="uk-width-1-2">
            <img class="uk-padding uk-align-center" data-src="/images/globe_binoc.png" width="450" height="450" alt="" uk-img>
        </div>
    </div>
</div>