    zoomOffset: -1,
    accessToken: 'pk.eyJ1Ijoic2hhbmVyeTg2IiwiYSI6ImNrcDFhN240aTFpZmUycG1wdnNsN2o5dGMifQ.9OhfkuesVE9Or_Nqkfxuzg'
}).addTo(mymap);
